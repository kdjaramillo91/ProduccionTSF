@{
    Layout = null;
}

<style>
    .row {
        padding-bottom: 2px;
    }

    .boxSearch {
        border-bottom: 1px Solid #C0C0C0;
        border-top: 1px solid #E5E5E5;
        margin-left: 0px;
        margin: 5px;
        padding: 5px;
        background-color: White;
        color: #B2B2B2;
        font-weight: bold;
    }
</style>
<div class="form">
    <div class="panelConsulta">
        <div class="row">
            <div class="col-sm-10">
                <div class="row">
                    <div class="col-sm-6">
                        <div class="row boxSearch">
                            Documento
                        </div>
                        <div class="row">
                            <div class="col-sm-4">
                                @Html.DevExpress().Label(settings =>
                                {
                                    settings.Name = "LabelEstado";
                                    settings.Text = "Estado: ";
                                }).GetHtml()
                            </div>
                            <div class="col-sm-8">
                                @Html.Partial("_ComboBoxEstadosIndex")
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-4">
                                @Html.DevExpress().Label(settings =>
                                {
                                    settings.Name = "LabelNumeroLiquidacion";
                                    settings.Text = "Número: ";
                                }).GetHtml()
                            </div>
                            <div class="col-sm-8">
                                @Html.DevExpress().TextBox(settings =>
                                {
                                    settings.Name = "NumeroLiquidacion";
                                    settings.Properties.ClientInstanceName = "NumeroLiquidacion";
                                    settings.Width = Unit.Percentage(100);

                                    settings.Properties.NullDisplayText = "Todos";
                                    settings.Properties.NullText = "Todos";

                                }).GetHtml()
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="row boxSearch">
                            Guia de Remisión
                        </div>
                        <div class="row">
                            <div class="col-sm-4">
                                @Html.DevExpress().Label(settings =>
                                {
                                    settings.Name = "LabelFechaInicioGuia";
                                    settings.Text = "Fecha Desde: ";
                                }).GetHtml()
                            </div>
                            <div class="col-sm-8">
                                @Html.DevExpress().DateEdit(settings =>
                                {
                                    settings.Width = Unit.Percentage(100);
                                    settings.Name = "DateEditFechaInicioGuia";
                                    settings.Properties.NullDisplayText = "Todos";
                                    settings.Properties.NullText = "Todos";

                                    //settings.Date = null;//new DateTime(DateTime.Now.Year, DateTime.Now.Month, 1);
                                    //settings.Properties.ClientSideEvents.DateChanged = "DateEditFechaInicioGuia_Changed";
                                }).GetHtml()
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-4">
                                @Html.DevExpress().Label(settings =>
                                {
                                    settings.Name = "LabelFechaFinGuia";
                                    settings.Text = "Fecha Hasta: ";
                                }).GetHtml()
                            </div>
                            <div class="col-sm-8">
                                @Html.DevExpress().DateEdit(settings =>
                                {
                                    settings.Width = Unit.Percentage(100);
                                    settings.Name = "DateEditFechaFinGuia";
                                    settings.Properties.NullDisplayText = "Todos";
                                    settings.Properties.NullText = "Todos";
                                    //settings.Date = DateTime.Now.Date;
                                    //settings.Properties.MinDate = new DateTime(DateTime.Now.Year, DateTime.Now.Month, 1);
                                }).GetHtml()
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-4">
                                @Html.DevExpress().Label(settings =>
                                {
                                    settings.Name = "LabelNumeroGuia";
                                    settings.Text = "Número: ";
                                }).GetHtml()
                            </div>
                            <div class="col-sm-8">
                                @Html.DevExpress().TextBox(settings =>
                                {
                                    settings.Name = "NumeroGuia";
                                    settings.Properties.ClientInstanceName = "NumeroGuia";
                                    settings.Width = Unit.Percentage(100);

                                    settings.Properties.NullDisplayText = "Todos";
                                    settings.Properties.NullText = "Todos";

                                }).GetHtml()
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <div class="row boxSearch">
                            Emisión
                        </div>
                        <div class="row">
                            <div class="col-sm-2">
                                @Html.DevExpress().Label(settings =>
                                {
                                    settings.Name = "LabelFechaInicioEmision";
                                    settings.Text = "Fecha Desde: ";
                                }).GetHtml()
                            </div>
                            <div class="col-sm-4">
                                @Html.DevExpress().DateEdit(settings =>
                                {
                                    settings.Width = Unit.Percentage(100);
                                    settings.Name = "DateEditFechaInicioEmision";
                                    settings.Date = new DateTime(DateTime.Now.Year, DateTime.Now.Month, 1);
                                    settings.Properties.ClientSideEvents.DateChanged = "DateEditFechaInicioEmision_Changed";
                                }).GetHtml()
                            </div>
                            <div class="col-sm-2">
                                @Html.DevExpress().Label(settings =>
                                {
                                    settings.Name = "LabelFechaFinEmision";
                                    settings.Text = "Fecha Hasta: ";
                                }).GetHtml()
                            </div>
                            <div class="col-sm-4">
                                @Html.DevExpress().DateEdit(settings =>
                                {
                                    settings.Width = Unit.Percentage(100);
                                    settings.Name = "DateEditFechaFinEmision";
                                    settings.Date = DateTime.Now.Date;
                                    settings.Properties.MinDate = new DateTime(DateTime.Now.Year, DateTime.Now.Month, 1);
                                }).GetHtml()
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-2">
                                @Html.DevExpress().Label(settings =>
                                {
                                    settings.Name = "LabelProveedores";
                                    settings.Text = "Proveedor: ";
                                }).GetHtml()
                            </div>
                            <div class="col-sm-4">
                                @Html.Partial("_ComboBoxProveedoresIndex")
                            </div>
                            <div class="col-sm-2">
                                @Html.DevExpress().Label(settings =>
                                {
                                    settings.Name = "LabelProductos";
                                    settings.Text = "Producto: ";
                                }).GetHtml()
                            </div>
                            <div class="col-sm-4">
                                @Html.Partial("_ComboBoxProductosIndex")
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-2">
                <div class="row boxSearch">
                    Acciones
                </div>
                <div class="row">
                    <div class="col-sm-10">
                        @Html.DevExpress().Button(settings =>
                        {
                            settings.Name = "btnBuscar";
                            settings.Text = "Buscar";
                            settings.Images.Image.IconID = IconID.ActionsSearch16x16devav;
                            settings.Width = Unit.Percentage(100);
                            settings.Height = 25;
                            settings.ClientSideEvents.Click = "BuscarClick";
                        }).GetHtml()
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-10">
                        @Html.DevExpress().Button(settings =>
                        {
                            settings.Name = "btnLimpiar";
                            settings.Text = "Limpiar";
                            settings.Images.Image.IconID = IconID.ActionsClear16x16;
                            settings.Width = Unit.Percentage(100);
                            settings.Height = 25;
                            settings.ClientSideEvents.Click = "LimpiarClick";
                        }).GetHtml()
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-10">
                        @Html.DevExpress().Button(settings =>
                        {
                            settings.Name = "btnNuevo";
                            settings.Text = "Nuevo";
                            settings.Images.Image.IconID = IconID.ActionsAdd16x16;
                            settings.Width = Unit.Percentage(100);
                            settings.Height = 25;
                            settings.ClientSideEvents.Click = "NuevoClick";
                        }).GetHtml()
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<script src="~/Scripts/liquidation_material/index.js"></script>