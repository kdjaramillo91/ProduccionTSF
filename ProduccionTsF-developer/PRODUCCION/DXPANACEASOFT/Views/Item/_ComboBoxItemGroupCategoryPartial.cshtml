    settings.CallbackRouteValues = new { Controller = "Item", Action = "ComboBoxItemGroupCategoryPartial" };

    settings.Properties.ClientSideEvents.BeginCallback = "ItemGroupCategoryCombo_BeginCallback";
    settings.Properties.ClientSideEvents.SelectedIndexChanged = "ItemGroupCategoryCombo_SelectedIndexChanged";

    settings.ControlStyle.CssClass = "editor";
