@using DXPANACEASOFT.DataProviders
@model DXPANACEASOFT.Models.FishingCustodian


<table class="table table-condensed">
    <tr>
        <td style="width: 8%;">
            @Html.DevExpress().LabelFor(m => m.code, settings =>
       {
           settings.Text = "Código:*";
           settings.AssociatedControlName = "code";

       }).GetHtml()
        </td>
        <td colspan="2">
            @Html.DevExpress().TextBoxFor(m => m.code, settings =>
       {
           settings.Name = "code";
           settings.Properties.ClientInstanceName = "code";
           settings.Width = Unit.Percentage(100);
           settings.Properties.NullText = "Código";
           settings.ShowModelErrors = true;
           settings.ClientVisible = true;
           settings.Properties.ClientSideEvents.Validation = "OnCodeFishingCustodianValidation";

       }).GetHtml()
        </td>

        <td style="width: 8%;">
            @Html.DevExpress().LabelFor(m => m.id_FishingSite, settings =>
            {
                settings.Text = "Zona/Sitio de Pesca:*";
                settings.AssociatedControlName = "id_FishingSite";
            }).GetHtml()
        </td>
        <td colspan="2">
            @{
                int? id_FishingSite = (Model != null && Model.id_FishingSite != 0) ? (int?)Model.id_FishingSite : null;
            }
            @Html.DevExpress().ComboBoxFor(m => m.id_FishingSite, settings =>
            {
                settings.Properties.ClientInstanceName = "id_FishingSite";

                settings.Properties.ValueField = "id";
                settings.Properties.TextField = "name";
                settings.Properties.ValueType = typeof(int);

                settings.Width = Unit.Percentage(100);

                settings.Properties.NullText = "Seleccione Zona de Pesa";
                settings.Properties.DropDownStyle = DropDownStyle.DropDownList;
                settings.Properties.ClearButton.DisplayMode = ClearButtonDisplayMode.OnHover;
                settings.Properties.IncrementalFilteringMode = IncrementalFilteringMode.Contains;

                settings.ShowModelErrors = true;
                settings.Properties.ClientSideEvents.Validation = "OnFishingSiteValidation";
            }).BindList(DataProviderFishingSite.FishingSitesByCompanyAndCurrent((int)ViewData["id_company"], id_FishingSite)).Bind(id_FishingSite).GetHtml()
        </td>

    </tr>

    <tr>
        <td style="width: 8%;">
            @Html.DevExpress().Label(settings =>
            {
                settings.Text = "Patrulla:";
                settings.AssociatedControlName = "patrol";
            }).GetHtml()
        </td>
        <td colspan="2">
            @Html.DevExpress().SpinEditFor(m => m.patrol, settings =>
       {
           settings.Name = "patrol";
           settings.Properties.ClientInstanceName = "patrol";
           settings.Properties.AllowMouseWheel = false;
           settings.Properties.NumberType = SpinEditNumberType.Float;
           settings.Properties.NumberFormat = SpinEditNumberFormat.Currency;
           settings.Properties.DecimalPlaces = 2;
           settings.Properties.MaxValue = 999999;
           settings.Properties.MinValue = 0;
           settings.Properties.ClientSideEvents.Validation = "patrolValidate";
           
       }).GetHtml()
        </td>
        <td style="width: 8%;">
            @Html.DevExpress().Label(settings =>
            {
                settings.Text = "Semi Completa:";
                settings.AssociatedControlName = "semiComplete";
            }).GetHtml()
        </td>
        <td colspan="2">
            @Html.DevExpress().SpinEditFor(m => m.semiComplete, settings =>
      {
          settings.Name = "semiComplete";
          settings.Properties.ClientInstanceName = "semiComplete";
          settings.Properties.AllowMouseWheel = false;
          settings.Properties.NumberType = SpinEditNumberType.Float;
          settings.Properties.NumberFormat = SpinEditNumberFormat.Currency;
          settings.Properties.DecimalPlaces = 2;
          settings.Properties.MaxValue = 999999;
          settings.Properties.MinValue = 0;
          settings.Properties.ClientSideEvents.Validation = "semiCompleteValidate";
      }).GetHtml()
        </td>
    </tr>

    <tr>
        <td style="width: 8%;">
            @Html.DevExpress().Label(settings =>
            {
                settings.Text = "Camioneta:";
                settings.AssociatedControlName = "truckDriver";
            }).GetHtml()
        </td>
        <td colspan="2">
            @Html.DevExpress().SpinEditFor(m => m.truckDriver, settings =>
       {
           settings.Name = "truckDriver";
           settings.Properties.ClientInstanceName = "truckDriver";
           settings.Properties.AllowMouseWheel = false;
           settings.Properties.NumberType = SpinEditNumberType.Float;
           settings.Properties.NumberFormat = SpinEditNumberFormat.Currency;
           settings.Properties.DecimalPlaces = 2;
           settings.Properties.MaxValue = 999999;
           settings.Properties.MinValue = 0;
           settings.Properties.ClientSideEvents.Validation = "truckDriverValidate";
       }).GetHtml()
        </td>
        <td style="width: 8%;">
            @Html.DevExpress().Label(settings =>
            {
                settings.Text = "H/Cambina Gye.:";
                settings.AssociatedControlName = "changeHG";
            }).GetHtml()
        </td>
        <td colspan="2">
            @Html.DevExpress().SpinEditFor(m => m.changeHG, settings =>
      {
          settings.Name = "changeHG";
          settings.Properties.ClientInstanceName = "changeHG";
          settings.Properties.AllowMouseWheel = false;
          settings.Properties.NumberType = SpinEditNumberType.Float;
          settings.Properties.NumberFormat = SpinEditNumberFormat.Currency;
          settings.Properties.DecimalPlaces = 2;
          settings.Properties.MaxValue = 999999;
          settings.Properties.MinValue = 0;
          settings.Properties.ClientSideEvents.Validation = "changeHGValidate";
      }).GetHtml()
        </td>
    </tr>

    <tr>
        <td style="width: 8%;">
            @Html.DevExpress().Label(settings =>
            {
                settings.Text = "H/Cabina Ruta.:";
                settings.AssociatedControlName = "cabinHR";
            }).GetHtml()
        </td>
        <td colspan="2">
            @Html.DevExpress().SpinEditFor(m => m.cabinHR, settings =>
       {
           settings.Name = "cabinHR";
           settings.Properties.ClientInstanceName = "cabinHR";
           settings.Properties.AllowMouseWheel = false;
           settings.Properties.NumberType = SpinEditNumberType.Float;
           settings.Properties.NumberFormat = SpinEditNumberFormat.Currency;
           settings.Properties.DecimalPlaces = 2;
           settings.Properties.MaxValue = 999999;
           settings.Properties.MinValue = 0;
           settings.Properties.ClientSideEvents.Validation = "cabinHRValidate";
       }).GetHtml()
        </td>
        <td style="width: 8%;">
            @Html.DevExpress().LabelFor(m => m.isActive, settings =>
             {
                 settings.Text = "¿Activo?:";
                 settings.AssociatedControlName = "isActive";
             }).GetHtml()
        </td>
        <td colspan="2">
            @Html.DevExpress().CheckBoxFor(m => m.isActive, settings =>
           {
               settings.Properties.ClientInstanceName = "isActive";

               settings.Width = Unit.Percentage(100);
           }).GetHtml()
        </td>
    </tr>
     
    <tr>
        <td colspan="6" style="text-align: right;">
            @Html.DevExpress().Button(settings =>
            {
                settings.Name = "btnUpdate";
                settings.Text = "Actualizar";
                settings.RenderMode = ButtonRenderMode.Button;
                settings.ImagePosition = ImagePosition.Left;
                settings.Images.Image.IconID = IconID.ActionsSave16x16devav;
                settings.UseSubmitBehavior = false;
                settings.ClientSideEvents.Click = "ButtonUpdate_Click";
            }).GetHtml()
            @Html.DevExpress().Button(settings =>
            {
                settings.Name = "btnCancel";
                settings.Text = "Cancelar";
                settings.RenderMode = ButtonRenderMode.Button;
                settings.ImagePosition = ImagePosition.Left;
                settings.Images.Image.IconID = IconID.ActionsClose16x16office2013;
                settings.UseSubmitBehavior = false;
                settings.ClientSideEvents.Click = "ButtonCancel_Click";
            }).GetHtml()
        </td>
    </tr>
    <tr id="fishingCustodianTypeAlertRow" style="display: none;">
        <td colspan="6">
            <div class="alert alert-danger fade in" style="margin-top:18px;">
                <button type="button" class="close" data-dismiss="alert" aria-label="close" title="close" style="top: 0px; right: 0px;"><span aria-hidden="true">&times;</span></button>
                <span id="fishingCustodianTypeErrorMessage"></span>
            </div>
        </td>
    </tr>
</table>

<script src="~/Scripts/fishingcustodian/editform.js"></script>
