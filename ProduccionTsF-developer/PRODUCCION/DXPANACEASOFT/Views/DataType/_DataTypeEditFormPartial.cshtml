@using DXPANACEASOFT.DataProviders
@model DXPANACEASOFT.Models.DataType

    
    @Html.Hidden("id_dataType", Model.id)

    <table class="table table-condensed">
        <tr>
            <td style="width: 8%;">
                    @Html.DevExpress().LabelFor(m => m.code, settings =>
               {
                   settings.Text = "Código:*";
                   settings.AssociatedControlName = "code";

               }).GetHtml()
            </td>
            <td>
                    @Html.DevExpress().TextBoxFor(m => m.code, settings =>
               {
                   settings.Name = "code";
                   settings.Properties.ClientInstanceName = "code";
                   settings.Width = Unit.Percentage(100);
                   settings.Properties.NullText = "Código";
                   settings.ShowModelErrors = true;
                   settings.ClientVisible = true;
                   settings.Properties.ClientSideEvents.Validation = "OnCodeDataTypeValidation";

               }).GetHtml()
            </td>
            <td>
                @Html.DevExpress().Label(settings =>
                {
                    settings.Text = "Nombre:*";
                    settings.AssociatedControlName = "dataTypeName";
                }).GetHtml()
            </td>
            <td colspan="3">
                @Html.DevExpress().TextBoxFor(m => m.name, settings =>
                {
                    settings.Properties.ClientInstanceName = "dataTypeName";

                    settings.Width = Unit.Percentage(100);

                    settings.Properties.NullText = "Nombre del Tipo de Dato";
                    settings.ShowModelErrors = true;
                    settings.Properties.ClientSideEvents.Validation = "OnDataTypeNameValidation";
                }).GetHtml()
            </td>
        </tr>
        <tr>
            <td>
                @Html.DevExpress().LabelFor(m => m.purchase_decimalPlace, settings =>
                {
                    settings.Text = "Lugar Decimal en Compra:*";
                    settings.AssociatedControlName = "purchase_decimalPlace";
                }).GetHtml()
            </td>
            <td>
                @Html.DevExpress().SpinEditFor(m => m.purchase_decimalPlace, settings =>
                {
                    settings.Properties.ClientInstanceName = "purchase_decimalPlace";

                    settings.Width = Unit.Percentage(100);

                    settings.Properties.NullText = "0";
                    settings.ShowModelErrors = true;
                    settings.Properties.ClientSideEvents.Validation = "OnDataTypePurchaseDecimalPlaceValidation";

                }).GetHtml()
            </td>
            <td>
                @Html.DevExpress().LabelFor(m => m.sale_decimalPlace, settings =>
                {
                    settings.Text = "Lugar Decimal en Venta:*";
                    settings.AssociatedControlName = "sale_decimalPlace";
                }).GetHtml()
            </td>
            <td>
                @Html.DevExpress().SpinEditFor(m => m.sale_decimalPlace, settings =>
                {
                    settings.Properties.ClientInstanceName = "sale_decimalPlace";

                    settings.Width = Unit.Percentage(100);

                    settings.Properties.NullText = "0";
                    settings.ShowModelErrors = true;
                    settings.Properties.ClientSideEvents.Validation = "OnDataTypeSaleDecimalPlaceValidation";

                }).GetHtml()
            </td>
            <td>
                @Html.DevExpress().LabelFor(m => m.inventory_decimalPlace, settings =>
                {
                    settings.Text = "Lugar Decimal en Inventario:*";
                    settings.AssociatedControlName = "inventory_decimalPlace";
                }).GetHtml()
            </td>
            <td>
                @Html.DevExpress().SpinEditFor(m => m.inventory_decimalPlace, settings =>
            {
                settings.Properties.ClientInstanceName = "inventory_decimalPlace";

                settings.Width = Unit.Percentage(100);

                settings.Properties.NullText = "0";
                settings.ShowModelErrors = true;
                settings.Properties.ClientSideEvents.Validation = "OnDataTypeInventoryDecimalPlaceValidation";

            }).GetHtml()
            </td>
        </tr>
        <tr>
            <td>
                @Html.DevExpress().LabelFor(m => m.description, settings =>
                {
                    settings.Text = "Descripción:";
                    settings.AssociatedControlName = "description";
                }).GetHtml()
            </td>
            <td colspan="5">
                @Html.DevExpress().MemoFor(m => m.description, settings =>
                {
                    settings.Properties.ClientInstanceName = "description";

                    settings.Width = Unit.Percentage(100);

                    settings.Properties.NullText = "";
                    settings.ShowModelErrors = true;
                }).GetHtml()
            </td>
        </tr>
        <tr>
            <td>
                @Html.DevExpress().LabelFor(m => m.isActive, settings =>
                {
                    settings.Text = "¿Activo?:";
                    settings.AssociatedControlName = "isActive";
                }).GetHtml()
            </td>
            <td colspan="5">
                @Html.DevExpress().CheckBoxFor(m => m.isActive, settings =>
                {
                    settings.Properties.ClientInstanceName = "isActive";

                    settings.Width = Unit.Percentage(100);
                }).GetHtml()
            </td>
        </tr>
        <tr>
            <td colspan="6" style="text-align: right;">
                @Html.DevExpress().Button(settings =>
                {
                    settings.Name = "btnUpdate";
                    settings.Text = "Actualizar";
                    settings.RenderMode = ButtonRenderMode.Button;
                    settings.ImagePosition = ImagePosition.Left;
                    settings.Images.Image.IconID = IconID.ActionsSave16x16devav;
                    settings.UseSubmitBehavior = false;
                    settings.ClientSideEvents.Click = "ButtonUpdate_Click";
                }).GetHtml()
                @Html.DevExpress().Button(settings =>
                {
                    settings.Name = "btnCancel";
                    settings.Text = "Cancelar";
                    settings.RenderMode = ButtonRenderMode.Button;
                    settings.ImagePosition = ImagePosition.Left;
                    settings.Images.Image.IconID = IconID.ActionsClose16x16office2013;
                    settings.UseSubmitBehavior = false;
                    settings.ClientSideEvents.Click = "ButtonCancel_Click";
                }).GetHtml()
            </td>
        </tr>
        <tr id="dataTypeAlertRow" style="display: none;">
            <td colspan="6">
                <div class="alert alert-danger fade in" style="margin-top:18px;">
                    <button type="button" class="close" data-dismiss="alert" aria-label="close" title="close" style="top: 0px; right: 0px;"><span aria-hidden="true">&times;</span></button>
                    <span id="dataTypeErrorMessage"></span>
                </div>
            </td>
        </tr>
    </table>

<script src="~/Scripts/datatype/editform.js"></script>
