@using DXPANACEASOFT.DataProviders
@using DXPANACEASOFT.Models

@{
    IceBagRange iceBagRange = Model ?? new IceBagRange();
}

@Html.Hidden("id_iceBagRange", iceBagRange.id)

<table style="width: 100%;">
    <tr>
        <td>
            <strong>
                C&oacute;digo:
            </strong>
        </td>
        <td colspan="4">
            @Html.Raw(iceBagRange.code)
        </td>
    </tr>

    <tr>
        <td>
            <strong>
                Nombre:
            </strong>
        </td>
        <td colspan="4">
            @Html.Raw(iceBagRange.name)
        </td>
    </tr>
    <tr>
        <td>
            <strong>
                Unidad de Medida:
            </strong>
        </td>
        <td colspan="4">
            @Html.Raw(iceBagRange.MetricUnit.name)
        </td>
    </tr>
    <tr>
        <td>
            <strong>
                Valor Inicial:
            </strong>
        </td>
        <td colspan="4">
            @Html.Raw(iceBagRange.range_ini)
        </td>
    </tr>
    <tr>
        <td>
            <strong>
                Valor Final:
            </strong>
        </td>
        <td colspan="4">
            @Html.Raw(iceBagRange.range_end)
        </td>
    </tr>
    <tr>
        <td style="width: 10%;">
            <strong>
                Creado por:
            </strong>
        </td>
        <td style="width: 10%;">
            @Html.Raw(UsernameById(iceBagRange.id_userCreate))
        </td>
        <td style="width: 15%;">
            <strong>
                Fecha de Creaci&oacute;n:
            </strong>
        </td>
        <td>
            @Html.Raw(iceBagRange.dateCreate.ToString("dd/MM/yyyy hh:mm:ss"))
        </td>
    </tr>
    <tr>
        <td>
            <strong>
                Modificado por:
            </strong>
        </td>
        <td>
            @Html.Raw(UsernameById(iceBagRange.id_userUpdate))
        </td>
        <td>
            <strong>
                Fecha de Modificaci&oacute;n:
            </strong>
        </td>
        <td>
            @Html.Raw(iceBagRange.dateUpdate.ToString("dd/MM/yyyy hh:mm:ss"))
        </td>
    </tr>
</table>

@functions{

    string UsernameById(int id_user)
    {
        User user = DataProviderUser.UserById(id_user);
        return (user != null) ? user.username : "";
    }

}
