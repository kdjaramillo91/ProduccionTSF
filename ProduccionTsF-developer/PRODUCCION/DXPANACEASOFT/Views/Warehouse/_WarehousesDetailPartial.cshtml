@using DXPANACEASOFT.DataProviders
@using DXPANACEASOFT.Models

@{
    Warehouse warehouse = Model ?? new Warehouse();
}

@Html.Hidden("id_warehouse", warehouse.id)

<table style="width: 100%;">
    <tr>
        <td>
            <strong>
                C&oacute;digo:
            </strong>
        </td>
        <td colspan="4">
            @Html.Raw(warehouse.code)
        </td>
    </tr>

    <tr>
        <td>
            <strong>
                Nombre:
            </strong>
        </td>
        <td colspan="4">
            @Html.Raw(warehouse.name)
        </td>
    </tr>
        <tr>
        <td>
            <strong>
                Tipo de Bodega:
            </strong>
        </td>
        <td colspan="4">
            @Html.Raw(warehouse.WarehouseType.name)
        </td>
    </tr>
    <tr>
        <td>
            <strong>
                Linea de Inventario:
            </strong>
        </td>
        <td colspan="4">
            @Html.Raw(warehouse.InventoryLine.name)
        </td>
    </tr>
    <tr>
        <td>
            <strong>
                Descripci&oacute;n:
            </strong>
        </td>
        <td colspan="4">
            @Html.Raw(warehouse.description)
        </td>
    </tr>
    <tr>
        <td style="width: 10%;">
            <strong>
                Creado por:
            </strong>
        </td>
        <td style="width: 10%;">
            @Html.Raw(UsernameById(warehouse.id_userCreate))
        </td>
        <td style="width: 15%;">
            <strong>
                Fecha de Creaci&oacute;n:
            </strong>
        </td>
        <td>
            @Html.Raw(warehouse.dateCreate.ToString("dd/MM/yyyy hh:mm:ss"))
        </td>
    </tr>
    <tr>
        <td>
            <strong>
                Modificado por:
            </strong>
        </td>
        <td>
            @Html.Raw(UsernameById(warehouse.id_userUpdate))
        </td>
        <td>
            <strong>
                Fecha de Modificaci&oacute;n:
            </strong>
        </td>
        <td>
            @Html.Raw(warehouse.dateUpdate.ToString("dd/MM/yyyy hh:mm:ss"))
        </td>
    </tr>
</table>

@functions{

    string UsernameById(int id_user)
    {
        User user = DataProviderUser.UserById(id_user);
        return (user != null) ? user.username : "";
    }

}
