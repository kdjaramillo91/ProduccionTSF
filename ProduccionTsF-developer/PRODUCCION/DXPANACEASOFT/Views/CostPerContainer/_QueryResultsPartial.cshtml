@model List<CostPerContenedor>
<div style="width: 100%;">
	@Html.DevExpress().Button(
		button =>
		{
			button.Name = "btnAddNewToolbar";
			button.Text = "";
			button.ToolTip = "Nuevo";
			button.Images.Image.IconID = IconID.ActionsAdditem16x16office2013;
			button.UseSubmitBehavior = false;
			button.ClientSideEvents.Click = "onAddNewQueryButtonClick";
		}).GetHtml()
	<div class="vertical-divider"></div>
	@Html.DevExpress().Button(
		button =>
		{
			button.Name = "btnRefreshToolbar";
			button.Text = "";
			button.ToolTip = "Refrescar";
			button.Images.Image.IconID = IconID.ActionsRefresh16x16office2013;
			button.UseSubmitBehavior = false;
			button.ClientSideEvents.Click = "onRefreshQueryToolbarButtonClick";
		}).GetHtml()
</div>

<hr style="margin-top: 2px; margin-bottom: 2px;" />

@using (Html.BeginForm())
{
	@Html.Partial("_QueryGridViewPartial", this.Model)
}
