
@model DXPANACEASOFT.Models.InstallWizard

<div style="padding: 0% 5%;">
    <table class="table table-condenced" style="border: 0px solid #ffffff; margin-bottom: 0px;">
        <tr>
            <td style="text-align: justify; border: 0px solid #ffffff;">
                <p>
                    Estimado cliente
                </p>
                <p>
                    Bienvenido al sistema ERP de produccion de la compañía Panaceasoft.
                    Este asistente le permitira a usted crear para su compañía un ambiete de prueba con el fin
                    de que usted pueda probar las funcionalidades de nuestro sistema.
                </p>
                <p>
                    Por favor siga las intricciones del asistente.
                </p>
                <p>
                    Atentamente, equipo de desarrollo Panaceasoft
                </p>
            </td>
        </tr>
    </table>

    <table class="table table-condenced">
        <tr>
            <td>
                <a href="#">Terminos y Condiciones</a>
            </td>
            <td>
                <div style="float: right; padding-right: 14px;">
                    @Html.DevExpress().CheckBoxFor(m => m.acceptTermsAndConditions, settings =>
                    {
                        settings.Name = "acceptTermsAndConditions";
                        settings.Properties.ClientInstanceName = "acceptTermsAndConditions";
                        settings.Text = "Acepto terminos y condiciones";
                        settings.Width = Unit.Percentage(100);
                        settings.RightToLeft = DefaultBoolean.True;
                        settings.Properties.ValidationSettings.ValidationGroup = "welcome";
                        settings.Properties.ClientSideEvents.Validation = "OnAcceptTermsAndConditionsValidation";
                    }).GetHtml()
                </div>
            </td>
        </tr>
    </table>
</div>




    
