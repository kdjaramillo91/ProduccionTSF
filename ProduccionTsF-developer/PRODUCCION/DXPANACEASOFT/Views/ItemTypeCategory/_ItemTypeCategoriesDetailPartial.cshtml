        </td>
    </tr>
    <tr>
        <td>
            <strong>
                Nombre:
            </strong>
        </td>
        <td colspan="4">
            @Html.Raw(itemTypeCategory.name)
        </td>
    </tr>
    <tr>
        <td style="width: 20%;">
            @*<strong>
                L&iacute;nea de inventario:
            </strong>*@
        </td>
        <td colspan="4">
            @*@{
                string tInventario = (itemTypeCategory.InventoryLine != null) ? itemTypeCategory.InventoryLine.name : "";
            }
            @Html.Raw(tInventario)*@
